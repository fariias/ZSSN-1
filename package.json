{
  "name": "ZSSN",
  "version": "0.1.0",
  "description": "Zombie Survival Social Network",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "remote-bower": "HOME=$OPENSHIFT_DATA_DIR bower install",
    "prepare-deploy": "npm run -s remote-bower",

    "start-dev": "set NODE_ENV=development&& nodemon server.js",
    "build-dev": "gulp build-dev",
