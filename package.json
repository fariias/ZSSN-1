    "node": "5.9.1"
  },
  "homepage": "https://github.com/leonardo-freitas-1995/ZSSN",
  "dependencies": {
    "body-parser": "1.14.1",
    "consign": "^0.1.2",
    "express": "4.13.3",
    "helmet": "0.12.0",
    "method-override": "2.3.5",
    "mongoose": "^4.6.3",
    "morgan": "^1.7.0",
    "pug": "^2.0.0-beta4"
  },

  "devDependencies": {
    "chai": "^3.5.0",
